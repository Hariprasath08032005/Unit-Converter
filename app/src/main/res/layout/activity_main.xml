<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UNIT CONVERTER"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1E3A8A"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif-medium"/>

        <!-- Conversion Type Selector -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Conversion Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#374151"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/conversionTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- Input Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Value"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/inputValue"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/edittext_background"
                    android:hint="0.0"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:textColor="#1F2937"/>

                <TextView
                    android:id="@+id/inputUnitLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Centimeters"
                    android:textSize="12sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Convert Button -->
        <Button
            android:id="@+id/convertButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="CONVERT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Result Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#EEF2FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Result"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/resultValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#1E3A8A"/>

                <TextView
                    android:id="@+id/resultUnitLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meters"
                    android:textSize="16sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Clear Button -->
        <Button
            android:id="@+id/clearButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="CLEAR"
            android:textSize="14sp"
            android:background="@drawable/button_secondary"
            android:textColor="#1E3A8A"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
